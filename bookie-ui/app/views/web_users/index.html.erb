<% content_for :stylesheets do %>
  <%= stylesheet_link_tag "list", :media => "all" %>
  <style type="text/css">
    table {
      width: auto;
    }
  </style>
<% end %>

<% content_for :heading do %>Web Users<% end %>

<div id="main">
  <div id="content">
    <table id="web_users">
      <caption>Users</caption>
      <tr>
        <th>E-mail address</th>
        <th>Actions</th>
      </tr>
      <% @web_users.all.each do |web_user| %>
        <tr>
          <td><%= web_user.email %></td>
          <td><%= link_to 'Delete', "/web_users/#{web_user.id}", :method => :delete %></td>
        </tr>
      <% end %>
    </table>
  </div>
</div>

