<% action_name = "#{@action_name.capitalize} password" %>
<% content_for :heading, action_name %>

<h2><%= action_name %> for <%= @web_user.email %></h2>

<%= form_tag password_reset_path(@web_user.id), method: :put do %>
  <%= form_errors @web_user.errors %>
  <p>
    <%= label_tag :password, 'New password' %><br/>
    <%= password_field_tag :password %>
  </p>
  <p>
    <%= label_tag :password_confirmation %><br/>
    <%= password_field_tag :password_confirmation %>
  </p>
  <%= hidden_field_tag :key, @reset_key %>
  <p>
    <%= submit_tag action_name %>
  </p>
<% end %>
